{
	"name": "renanhangai/validator",
	"version": "v2.3.2",
	"description": "Validate any php variable using a very simple sintax.",
	"keywords": [
		"validator",
		"validate",
		"data",
		"simple"
	],
	"type": "library",
	"license": "MIT",
	"authors": [
		{
			"name": "renanhangai",
			"email": "hangai.renan@gmail.com"
		}
	],
	"require": {
		"marcj/topsort": "^1.1"
	},
	"require-dev": {
		"phpunit/phpunit": "^6.4",
		"rtlopez/decimal": "^1.0"
	},
	"suggest": {
		"rtlopez/decimal": "Allows decimal validation using v::decimal($digits, $decimal)"
	},
	"scripts": {
		"test": "phpunit --configuration src/phpunit.xml"
	},
	"autoload": {
		"psr-4": {
			"libweb\\validator\\": "src/validator"
		},
		"classmap": [
			"src/Validator.php",
			"src/ValidatorException.php"
		]
	}
}
